<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.administrator.myapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.LoginActivity"
                android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.TeacherFunctionsActivity"
        android:label="@string/function_list">
        </activity>
        <activity android:name=".activity.GroupListActivity"
        android:label="@string/group_list">
        </activity>
        <activity android:name=".activity.StudentDetailActivity"
        android:label="@string/student_detaillist">
        </activity>
        <activity android:name=".activity.EEHListActivity">
        </activity>
        <activity android:name=".activity.EEHDetailActivity">
        </activity>
        <activity android:name=".activity.ScoreListActivity"
        android:label="@string/assignment_list">
        </activity>
        <activity android:name=".activity.ScoreDetailActivity"
        android:label="@string/question_list">
        </activity>
        <activity android:name=".activity.QuestionDetailActivity"
        android:label="@string/question_result_list">
        </activity>
        <activity android:name=".activity.StudentFunctionActivity"
        android:label="@string/function_list">
        </activity>
        <activity android:name=".activity.AnalysisListActivity"
        android:label="@string/assignment_list">
        </activity>
        <activity android:name=".activity.AnalysisStuListActivity"
        android:label="@string/student_detaillist">
        </activity>
        <activity android:name=".activity.AnalysisDetailActivity"
        android:label="@string/analysis_detail_list">
        </activity>
    </application>

</manifest>